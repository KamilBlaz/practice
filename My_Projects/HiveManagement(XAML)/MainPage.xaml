            Robotnica numer 4 is doing 'Nauczanie pszczółek' jeszcze przez 2 zmiany" BorderBrush="#FFAE2A2A"
                          
                          
                          >
                <ScrollViewer.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </ScrollViewer.Background>
            </ScrollViewer>
            <TextBox Text="Raport ze zmiany" TextWrapping="Wrap" Margin="32,200,1166,452" FontSize="20" Grid.Row="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="32,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Zadanie"/><LineBreak/><Run/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="266,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Zmiany"/><LineBreak/><Run/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="22,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" RenderTransformOrigin="1.102,-0.919" Text="Przydział prac robotnicom"/>








        </Grid>
    </Grid>
